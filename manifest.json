{
  "manifest_version": 3,
  "name": "Drishti Sahay",
  "version": "1.0",
  "description": "Assign keyboard shortcuts to any element on a webpage.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "Styles.css"
      ]
    }
  ]
}